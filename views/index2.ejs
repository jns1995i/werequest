<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BVRSRS</title>
    
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" href="/images/logo.png">

    <style>
        body { position: relative; overflow-y: auto; }
        .fnav { background-color: var(--shade5); color: white; max-width: 100%; }
        .homeCard {
            width: 40%; height: 60%;
            backdrop-filter: blur(15px) saturate(150%);
            background: rgba(255, 255, 255, 0.2);
            border-radius: 15px; border: 1px solid rgba(255, 255, 255, 0.6);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
            padding: 20px; display: flex; flex-direction: column;
            align-items: center; justify-content: center; color: white; text-align: center;
        }
        form {
            width: 30%;
            padding-inline: 50px;
            border-radius: 24px;
        }
        .nav:hover {
            transform: scale(1) !important;
        }
        
        .homePhoto { height: 160px; width: 160px; }

        @media (max-width: 768px) {
            form { display: block; height: auto; width: 80%; }
            .homePhoto { height: 20vw; width: 20vw; }
            .homeSec2 { border-left: 0; padding-left: 0; }
            .fnav { font-size: 12px; }
            .p10 { font-size: 10px; }
            p.title { font-size: 12px; }
        }

        @media (max-width: 1024px) {
            .homePhoto { height: 160px; width: 160px; }
            .g-recaptcha {
                transform: scale(0.5);
                width: 200px;
            }
        }
        .g-recaptcha {
        padding: 0;  /* Optional padding for better spacing */
        display: block; /* Ensure the reCAPTCHA element is a block element */
        width: fit-content !important;
        height: fit-content !important;
        max-width: 100%;
    }
        div { width: auto;}
    </style>
</head>
<body class="witch abstractBG relative overflow-y">

<form  class="gap20" style="flex-direction: row; background-color: rgba(255, 255, 255, 0.152);" id="autoLoginForm" action="/login2" method="POST">
        <a href="/" class="nav cnav absolute left20 top20"><i class="fas fa-chevron-left"></i></a>
        <a href="/acc" class="nav cnav absolute right20 top20 hidden"><i class="fas fa-user"></i></a>
        <div class="gap20 col homeSec2 width100">
            <img src="/images/annPhoto2.jpg" alt="Logo" class="homePhoto borderRadius500">
            <p class="title white">VVIP ACCESS</p>
            <div class="col gap10 width100">
                <div class="field width100">
                    <div class="selectBar">
                        <select name="username" id="residentSelect">
                            <option value="">Choose Account</option>
                            <% if (residents && residents.length > 0) { %>
                                <% residents.forEach(resident => { %>
                                    <% if ((resident.access === 1 || resident.access === "1") && resident.username) { %>
                                        <option value="<%= resident.username %>">
                                            <%= resident.firstName %> <%= resident.lastName %> ( <%= resident.username %> )
                                        </option>
                                    <% } %>
                                <% }) %>
                                <% residents.forEach(resident => { %>
                                    <% if (resident.username) { %>
                                        <option value="<%= resident.username %>">
                                            <%= resident.firstName %> <%= resident.lastName %> ( <%= resident.username %> )
                                        </option>
                                    <% } %>
                                <% }) %>
                            <% } %>
                        </select>
                    </div>
                    <input type="hidden" name="autoLogin" value="true">
                </div>
            </div>
                    <a href="/acc" class="size14 white">View all residents record &nbsp; <i class="fas fa-chevron-right inline"></i></a>

        </div>
</form>

<script>
    document.getElementById("residentSelect").addEventListener("change", function() {
        document.getElementById("autoLoginForm").submit();
    });
</script>
    <form class="gap20 hidden" style="flex-direction: row;" action="/login2" method="POST">
        <a href="/" class="nav cnav absolute left20 top20"><i class="fas fa-chevron-left"></i></a>
        <div class="gap20 col homeSec2 width100">
            <img src="/images/logo.png" alt="Logo" class="homePhoto">
            <p class="title">VVIP ACCESS</p>
            <div class="col gap10 width100">
                <div class="field width100">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="field password width100">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                    <span class="showPass faded" id="showPass">show</span>
                </div>
            </div>
    
            <button type="submit" class="nav fnav">Login</button>
            <a href="/accounts" class="nav height0 width0 str500">View All Accounts</a>
        </div>
    </form>
    


    <script>
        document.querySelectorAll('.showPass').forEach(button => {
            button.addEventListener('click', function() {
                const passwordInput = button.previousElementSibling;
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    button.textContent = 'hide';
                } else {
                    passwordInput.type = 'password';
                    button.textContent = 'show';
                }
            });
        });
    </script>

</body>
</html>
